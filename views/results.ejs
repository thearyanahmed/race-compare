<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Race Comparison Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Race Comparison Results</h1>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger">
                <h4 class="alert-heading">Error</h4>
                <p><%= error %></p>
            </div>
        <% } %>

        <% if (results && results.length === 0) { %>
            <div class="alert alert-warning">
                No matching athletes found between these races.
            </div>
        <% } else if (results && results.length > 0) { %>
            <h2>Matching Athletes</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Athlete Name</th>
                        <th>Race 1 Time</th>
                        <th>Race 2 Time</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(result => { %>
                        <tr>
                            <td><%= result.name %></td>
                            <td><%= result.race1Time %></td>
                            <td><%= result.race2Time %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
        
        <a href="/" class="btn btn-primary mb-4">Compare Different Races</a>

        <div class="row mt-4">
            <div class="col-md-6">
                <h3>Athletes from Race 1</h3>
                <% if (athletes1 && athletes1.length > 0) { %>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% athletes1.forEach(athlete => { %>
                                <tr>
                                    <td><%= athlete.originalName %></td>
                                    <td><%= athlete.time %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="alert alert-info">No athletes found in Race 1</div>
                <% } %>
            </div>
            <div class="col-md-6">
                <h3>Athletes from Race 2</h3>
                <% if (athletes2 && athletes2.length > 0) { %>
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% athletes2.forEach(athlete => { %>
                                <tr>
                                    <td><%= athlete.originalName %></td>
                                    <td><%= athlete.time %></td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="alert alert-info">No athletes found in Race 2</div>
                <% } %>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 